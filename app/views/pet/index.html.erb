<h1>Signup to be notified if your pet is found</h1>
<div class="formContainer">
  <%= form_for(@pet) do |f| %>
    <%= f.label :type %>
    <%= f.text_field :type %><br />
    <%= f.label :breed %>
    <%= f.text_field :breed %><br />
    <%= f.label :color %>
    <%= f.text_field :color %><br />
    <%= f.label :sex %>
    <%= f.text_field :sex %><br />
    <%= f.label :email %>
    <%= f.text_field :email %>
  <% end %>
</div>