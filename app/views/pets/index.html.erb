<div class="formContainer container">
  <h2>Sign up to be emailed when your pet is found</h2>
  <%= form_for(@pet) do |f| %>
    <div class="col-sm-4">
      <div class="row"><%= f.label :animalType, 'Animal Type' %></div>
      <div class="row"><%= f.label :breed %></div>
      <div class="row"><%= f.label :color %></div>
      <div class="row"><%= f.label :sex %></div>
      <div class="row"><%= f.label :email %></div>
    </div>
    <div class="col-sm-8">
      <div class="row"><%= f.select(:animalType, options_for_select([['Dog', 'Dog'], ['Cat', 'Cat']]))%></div>
      <div class="row"><%= f.text_field :breed %></div>
      <div class="row"><%= f.text_field :color %></div>
      <div class="row"><%= f.select(:sex, options_for_select([['Unknown', 'Unknown'],
                                                                  ['Intact Male', 'Intact Male'],
                                                                  ['Neutered Male', 'Neutered Male'],
                                                                  ['Intact Female', 'Intact Female'],
                                                                  ['Spayed Female', 'Spayed Female']])) %>
      </div>
      <div class="row"><%= f.text_field :email %></div>
    </div>
    <%= f.submit "Submit", class: "submitButton" %>
  <% end %>
</div>